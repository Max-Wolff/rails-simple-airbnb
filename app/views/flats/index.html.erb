<div class="container">
  <h1>All our Flats</h1>

  <% @flats.each do |flat| %>
  <div class="cards">
      <div class="px-3 pt-3">
      <h3><%= flat.name %></h3>
      </div>
      <div class="d-flex justify-content-center px-3">
      <p><%= flat.address %></p>
      </div>
      <div class="d-flex justify-content-between px-3">
        <h4><i class="fas fa-user-friends"></i> <%= flat.number_of_guests %></h4>
        <h4><i class="fas fa-euro-sign"></i> <%= flat.price_per_night %></h4>
      </div>
      <div class="d-flex justify-content-center px-15 white">
      <%= link_to "More info", flat_path(flat) %>
      </div>
    </div>
  <% end %>
</div>
